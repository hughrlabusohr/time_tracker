<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Welcome to Time Tracker!</h1>

<p>If you already have an account you may login below: </p>
<p>otherwise please create an account here: <%= link_to 'Sign Up!', new_user_path %></p>
<p>Please login below.</p>

<%= form_tag(login_path) do %>
   <p><%= label_tag :email %>
  <%= email_field_tag :email %></p>

  <p><%= label_tag :password %>
  <%= password_field_tag :password %></p>

  <%= submit_tag "Log in" %>
<% end %>
